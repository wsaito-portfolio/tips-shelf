<% provide(:title,"Log in") %>
<h1>Log in</h1>
<div class="row col-sm-6 offset-sm-3">
    <div class="">
     <%= form_for(:session,url:login_path) do |f| %>
        <%= f.label :email %>
        <%= f.text_field :email,class:"form_control" %>
        <%= f.label :password, "パスワード" %>
        <%= link_to "(パスワードをお忘れですか?)", new_password_reset_path %>
        <%= f.password_field :password,class:"form_control" %>
        <%= f.label :remember_me, class:"checkbox inline" do %> 
            <%= f.check_box :remember_me %>
            <span>ログイン状態を保存する</span>
        <% end %>
        <%= f.submit "Log in" ,class:"btn btn-primary" %>
    <% end %>
        <p>新規登録は <%= link_to "こちら",signup_path %></p>
        <p>お試ししたい人は <%= link_to "こちら", easy_login_url %></p>
    </div>
</div>