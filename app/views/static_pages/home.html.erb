<% if logged_in? %>
  <% provide(:title, @user.name) %>
  <div class="row">
   <%= render "users/user_profile"  %>
    <div class="col-md-8">
      <%= render 'users/follow_form' if logged_in? %>
      <% if @feed_items %>
        <h3 class="border_line_bottom">Time Line</h3>
        <ol class="tips">
          <%= render @feed_items %>
        </ol>
      <% end %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1>Tips Shelf</h1>
    <p>
      Tips ShelfはTips共有SNSサービスです。
    </p>
    <p>下のSign up now!から登録してTipsの共有をはじめよう!</p>
    <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
  </div>
  
  <%= link_to image_tag("rails.png", alt: "Rails logo"),
              "http://rubyonrails.org/" %>
<% end %>