<div class="row">
    <div class="col-sm-8 offset-sm-2">
        <%= form_with(url: search_path,class: "search_form form-inline input-group", method: :get, local: true ) do |f|%>
            <%= button_tag :type => "submit", :class =>"btn btn-default btn-s-md input-group-text" do %>
                <i class="fas fa-search"></i>
            <% end %>
            <%= f.text_field :search, value: @search, data: {search_word: @search} ,class: "form-control search_field" %>
            <%= hidden_field_tag :focus, @focus, class: "search_focus" %>
        <% end %>
        <ul class="nav nav-tabs" role="tablist">
           <li class="nav-item" role="presentation">
                <a aria-controls="tab_a" class="nav-link <%= @focus == "tips" ? "active show" : "" %>" data-toggle="tab" href="#tab_a" role="tab" data-value="tips">Tips</a>
            </li>
            <li class="nav-item " role="presentation">
                <a aria-controls="tab_b" class="nav-link <%= @focus == "users" ? "active" : "" %>" data-toggle="tab" href="#tab_b" role="tab" data-value="users">Users</a>
            </li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane <%= @focus == "tips" ? "active" : "" %>" id="tab_a" role="tabpanel">
                <h3 class="border_line_bottom">Search Result (<%= !@tips.nil? ? @tips_count : 0 %>)</h3>
                <% if @tips&.any? %>
                    <ol class="tips">
                        <%= render @tips %>
                    </ol>
                <% end %>
            </div>
            <div class="tab-pane <%= @focus == "users" ? "active" : "" %>" id="tab_b" role="tabpanel">
                 <h3 class="border_line_bottom">Search Result (<%= !@users.nil? ? @users_count : 0 %>)</h3>
                <% if @users&.any? %>
                    <ol class="users">
                        <%= render @users %>
                    </ol>
                <% else %>
                    <div>No Users</div>
                <% end %>
            </div>
          </div>
    </div>
</div>