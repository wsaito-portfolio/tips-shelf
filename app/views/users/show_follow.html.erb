<% provide(:title, @title) %>
<div class="row">
    <%= render "users/user_profile" %>
    <div class="col-sm-8">
        <h3 class="border_line_bottom"><%= @title %></h3>
        <% if @users.any? %>
            <ul class="users follow">
                <%= render @users %>
            </ul>
        <% end %>
    </div>
</div>