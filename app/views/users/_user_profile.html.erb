<aside class="col-sm-4">
    <section class="user_info">
    <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
    </h1>
        <div class="profile" , data-id= <%= @user.id %> >
            <% if !@user_detail.profile_description.nil? %>
                <%= simple_format(@user_detail.profile_description) %>
            <% end %>
        </div>
    </section>
    <section>
        <% if current_user?(@user) %>
        <div class="text-center">
            <div class="col-md-2" >
                <%= link_to "Tipsを投稿", new_user_tip_path(@user), class: "btn btn-primary align-center" %>
            </div>
            <div class="col-md-2">
                <%= link_to "Shelfを作成", new_user_shelf_path(@user), class: "btn btn-primary align-center" %>
            </div>
        </div>
        <% end %>
    </section>
         <section class="stats">
        <%= render 'shared/stats' %>
     </section>
    <section>
        <div class="shelf_margin">
            <ol class="shelves">
                <li><%= link_to "すべて", @user %></li>
                <li><%= link_to "未分類", user_shelf_path(@user,:nil) %></li>
                <% @user.shelves.each do |shelf| %>
                    <% if !shelf.id.nil? %>
                        <li><%= link_to shelf.name, user_shelf_path(@user,shelf.id) %></li>
                    <% end %>
                <% end %>
            </ol>
        </div>
    </section>
</aside>